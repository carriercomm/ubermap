= form_for(@map) do |f|
  - if @map.errors.any?
    #error_explanation
      %h2
        = pluralize(@map.errors.count, "error")
        prohibited this map from being saved:
      %ul
        - @map.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .field
    = f.label :slug
    = f.text_field :slug, class: 'form-control'
  .field
    %label.checkbox
      = f.check_box :active
      Active
      
  .actions.pull-right
    = f.submit 'Save', class: 'btn btn-primary'
