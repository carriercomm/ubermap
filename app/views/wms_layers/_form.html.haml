= form_for(@wms_layer) do |f|
  - if @wms_layer.errors.any?
    #error_explanation
      %h2
        = pluralize(@wms_layer.errors.count, "error")
        prohibited this wms_layer from being saved:
      %ul
        - @wms_layer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :layers
    %br/
    = f.text_field :layers
  .field
    = f.label :legend
    %br/
    = f.text_area :legend
  .field
    = f.label :active
    %br/
    = f.check_box :active
  .field
    = f.label :options
    %br/
    = f.text_field :options
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
