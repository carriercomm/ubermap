var map = $('#map').data('container').map;
var layer = $('[data-map="reload"]').data('layer');

map.removeLayer(layer);

geojson = new GeoJSONLayer(<%= @geojson_layer.leaflet_params.to_json.html_safe %>);
geojson.layer.addTo(map);

$('[data-map="reload"]').data('layer', geojson.layer);
$('.tabbed-form').html('<%= escape_javascript(render('form')) %>')