%p.alert.alert-info
  Default styling applied to features without
  = link_to 'simple-style', 'https://github.com/mapbox/simplestyle-spec', target: :_blank
  params
.form-horizontal
  - style = f.object.style
  = f.fields_for :style, style do |sf|
    .form-group
      = sf.label 'marker-color', class: 'col-lg-4 control-label'
      .col-lg-8
        = sf.text_field 'marker-color', value: style.try(:[], 'marker-color'), class: 'form-control'
    .form-group
      = sf.label 'marker-symbol', class: 'col-lg-4 control-label'
      .col-lg-8
        = sf.text_field 'marker-symbol', value: style.try(:[], 'marker-symbol'), class: 'form-control'
    .form-group
      = sf.label 'stroke', class: 'col-lg-4 control-label'
      .col-lg-8
        = sf.text_field 'stroke', value: style.try(:[], 'stroke'), class: 'form-control'
    .form-group
      = sf.label 'stroke-width', class: 'col-lg-4 control-label'
      .col-lg-8
        = sf.text_field 'stroke-width', value: style.try(:[], 'stroke-width'), class: 'form-control'
    .form-group
      = sf.label 'stroke-opacity', class: 'col-lg-4 control-label'
      .col-lg-8
        = sf.text_field 'stroke-opacity', value: style.try(:[], 'stroke-opacity'), class: 'form-control'
